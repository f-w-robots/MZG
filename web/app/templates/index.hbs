{{#unless model.user.authorized}}
<div class="container">
  <div class="row">

    <div class="login-form">
      {{#if error}}
        <div class="alert alert-warning" role="alert">{{error}}</div>
      {{/if}}
      <h3>Please Log In, or {{#link-to 'signup'}}Sign Up{{/link-to}}</h3>

      <a class="btn btn-block btn-social btn-github" {{action "github"}}>
         Sign in with Github
        <span class="fa fa-github"></span>
      </a>

      <div class="login-or">
        <hr class="hr-or">
        <span class="span-or">or</span>
      </div>

      <form role="form">
        <div class="form-group">
          <label for="inputUsernameEmail">Username or email</label>
          {{input value=username class="form-control"}}
        </div>
        <div class="form-group">
          {{#link-to 'forgot_password' class="pull-right"}}Forgot password?{{/link-to}}
          <!-- <a class="pull-right" href="#">Forgot password?</a> -->
          <label for="inputPassword">Password</label>
          {{input value=password class="form-control" type="password"}}
        </div>
        <!-- <div class="checkbox pull-right">
          <label>
            <input type="checkbox" disabled="disabled">
            Remember me </label>
        </div> -->
        <a class="btn btn-block btn-dropbox" {{action "github"}}>
           Sign in
        </a>

      </form>

    </div>

  </div>
</div>
{{/unless}}
{{#if model.user.authorized}}
{{manual-control user=model.user devices=model.devices algorithms=model.algorithms interfaces=model.interfaces}}
{{/if}}
