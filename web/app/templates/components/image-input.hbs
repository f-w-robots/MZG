{{#if file}}
<div>
  {{#if file}}
    <img src="{{file.dataURL}}" {{action 'clickOnImage'}}>
  {{/if}}
</div>
  {{#unless disableRemove}}
    <div class="btn btn-danger" {{action "removeImage"}}>x</div>
  {{/unless}}
{{else}}
<img src="{{defaultUrl}}" {{action 'clickOnImage'}}>
{{/if}}

<br>

{{file-input fileChanged="fileSelectionChanged" hideSelect=true}}
