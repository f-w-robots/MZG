<div class="container">
  <div class="row">
    {{#if error}}
      <div class="alert alert-warning" role="alert">{{error}}</div>
    {{/if}}
    <div class="login-form">
      <h3>Please Sign Up, or {{#link-to 'index'}}Log in{{/link-to}}</h3>
      <form role="form">
        <div class="form-group">
          <label for="inputUsernameEmail">Email</label>
          {{input value=email class="form-control"}}
        </div>
        <div class="form-group">
          <label for="inputPassword">Password</label>
          {{input value=password class="form-control" type="password"}}
        </div>
        <div class="form-group">
          <label for="inputPassword">Password Configmation</label>
          {{input value=password_confirmation class="form-control" type="password"}}
        </div>
        <button type="submit" class="btn btn btn-primary" {{action "signup"}}>
          Sign Up
        </button>
      </form>
    </div>
  </div>
</div>
