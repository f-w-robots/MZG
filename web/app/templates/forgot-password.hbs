<div class="container">
  <div class="row">
    {{#if error}}
      <div class="alert alert-warning" role="alert">{{error}}</div>
    {{/if}}
    {{#if success}}
      <div class="alert alert-success" role="alert">{{success}}</div>
    {{/if}}
    <div class="login-form">

      <form role="form">
        <div class="form-group">
          <label for="inputUsernameEmail">Email or Username</label>
          {{input value=email class="form-control"}}
        </div>
        <button type="submit" class="btn btn btn-primary" {{action "restore_password"}}>
          Restore password
        </button>
        <div class="login-or">
          <hr class="hr-or">
          <span class="span-or">or</span>
        </div>
        <h3>{{#link-to 'signup'}}Sign Up{{/link-to}}, {{#link-to 'index'}}Log in{{/link-to}}</h3>
      </form>
    </div>
  </div>
</div>
