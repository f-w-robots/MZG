<div class="container">
  <div class="btn btn-default" {{action "startGame"}}>start</div>
  <form>
    <h2>Game rules</h2>
    <div class="form-group">
      <div class="col-md-1">
        Name:
      </div>
      <div class="col-md-1">
        {{input value=model.name class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-1">
        Timeout:
      </div>
      <div class="col-md-1">
        {{input value=model.timeoutM class="form-control"}}
      </div>
      <div class="col-md-1">
        {{input value=model.timeoutS class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-1">
        rounds:
      </div>
      <div class="col-md-1">
        {{input value=model.rounds class="form-control"}}
      </div>
    </div>

    {{#textarea value=model.code cols="80" rows="20" class="form-control"}}{{/textarea}}

    <div class="btn btn-default" {{action "saveRecord"}}>save</div>
  </form>

</div>
