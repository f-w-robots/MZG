<div class="container">
  <b>Available devices</b>, {{#link-to 'devices.new'}}new{{/link-to}}
  <br>
  {{#each model.devices as |device|}}
    {{#if device.id}}
      <b>{{device.hwid}}</b> -
      {{#if device.manual}}
        manual,
      {{else}}
        algorithm,
      {{/if}}
      {{#link-to 'devices.edit' device}}edit{{/link-to}},
      <a href="#" {{action "deleteRecord" device}}>delete</a>
      <br>
    {{/if}}
  {{/each}}
  <br>
  <b>Interfaces</b>, {{#link-to 'interface.new'}}new{{/link-to}}
  <br>
  {{#each model.interfaces as |interface|}}
    {{#if interface.id}}
      <b>{{interface.interfaceId}}</b>
      {{#link-to 'interface.edit' interface}}edit{{/link-to}},
      <a href="#" {{action "deleteRecord" interface}}>delete</a>
      <br>
    {{/if}}
  {{/each}}
  <br>
  <b>Algorithms</b>, {{#link-to 'algorithm.new'}}new{{/link-to}}
  <br>
  {{#each model.algorithms as |algorithm|}}
    {{#if algorithm.id}}
      <b>{{algorithm.algorithmId}}</b>
      {{#link-to 'algorithm.edit' algorithm}}edit{{/link-to}},
      <a href="#" {{action "deleteRecord" algorithm}}>delete</a>
      <br>
    {{/if}}
  {{/each}}
</div>
