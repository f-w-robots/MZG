{
  "data": <%= @individual ? '' : '[' %>
  <% @records.each_with_index do |model, index| %>
    {
      "type": "devices",
      "id": "<%= model[:hwid] %>",
      "attributes": {
        <% @attributes.each_with_index do |attribute, index| %>
          "<%= attribute %>": "<%= model[attribute] %>"
            <%= @attributes.count - 1 == index ? '' : ',' %>
        <% end %>
      }
    }<%= @records.count - 1 == index ? '' : ',' %>
  <% end %>
  <%= @individual ? '' : ']' %>
}
