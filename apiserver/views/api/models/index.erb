{
  "data": <%= @individual ? '' : '[' %>
  <% @records.each_with_index do |record, index| %>
    {
      "type": "<%= @model.pluralize %>",
      "id": "<%= record['_id'].to_s %>",
      "attributes": {
        <% @attributes.each_with_index do |attr, index| %>
          <%= attribute(attr, record[attr], @attributes.count - 1 != index) %>
        <% end %>
      }
    }<%= @records.count - 1 == index ? '' : ',' %>
  <% end %>
  <%= @individual ? '' : ']' %>
}
