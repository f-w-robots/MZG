<% records_count = @records.count %>
{
  "data": <%= (records_count == 1) ? '' : '[' %>
  <% @records.each_with_index do |record, index| %>
    {
      "type": "<%= @model.pluralize %>",
      "id": "<%= record['_id'].to_s %>",
      "attributes": {
        <% @model.attributes.each_with_index do |attr, index| %>
          <%= attribute(attr, record[attr], true) %>
        <% end %>
        "errors": <%= record.errors.to_json %>
      }
      <% if @model.relationships.present? %>
      ,
      "relationships": {

        <% @model.relationships.each_with_index do |relationship, index| %>
          <% if id = record.attributes[relationship] %>
            "<%= relationship %>": {
              "data": <%= id.is_a?(Array) ? '[' : '' %>
              <% ids = id.is_a?(Array) ? id : [id] %>
                <% ids.each_with_index do |id, index| %>
                  {
                    "id": "<%= id %>",
                    "type": "<%= relationship %>"
                  }<%= index +1 != ids.size ? ',' : '' %>
                <% end %>
              <%= id.is_a?(Array) ? ']' : '' %>
            } <%= index +1 != @model.relationships.size ? ',' : '' %>
          <% end %>
        <% end %>
      }
      <% end %>

    }<%= (records_count - 1 == index) ? '' : ',' %>
  <% end %>
  <%= records_count == 1 ? '' : ']' %>
}
