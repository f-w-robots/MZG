{"data":
    {
      "type": "users",
      "id": "current",
      "attributes": {
          "username": "<%= @user['username'].to_s %>",
          "email": "<%= @user['email'].to_s %>",
          "avatar-url": "<%= @user['avatar_url'].to_s %>",
          "authorized": <%= env['warden'].authenticate? %>,
          "confirmed": <%= !!@user['confirmed'] %>,
          "providers": <%= @providers.to_json %>,
          "errors": <%= @errors.to_json %>,
          "avatar": <%= @user['avatar'].to_json %>,
          "info": "<%= @user['info'].to_s %>",
          "url": "<%= @user['url'].to_s %>",
          "location": "<%= @user['location'].to_s %>"
      }
    }
}
